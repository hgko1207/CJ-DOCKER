                                <StackPanel>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#FF3333"/>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#4D4D4D" Margin="0 1 0 0"/>
                                </StackPanel>
                            </DockPanel>

                            <ContentControl Template="{StaticResource Line}" Height="1" Margin="0 5"/>

                            <DockPanel>
                                <TextBlock Text="위험경보" Style="{StaticResource StatusText}" Width="110" Margin="5 0 0 0"/>
                                <TextBlock Text="{Binding DangerStatus}" Style="{StaticResource StatusText}"/>
                                <StackPanel>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#FF3333"/>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#FF3333" Margin="0 1 0 0"/>
                                </StackPanel>
                            </DockPanel>
                        </StackPanel>
                    </StackPanel>
