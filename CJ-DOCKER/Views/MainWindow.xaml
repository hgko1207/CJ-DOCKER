                                <TextBlock Text="{Binding InCarStatus}" Style="{StaticResource StatusText}"/>
                                <StackPanel>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#4D4D4D"/>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#FF3333" Margin="0 1 0 0"/>
                                </StackPanel>
                            </DockPanel>

