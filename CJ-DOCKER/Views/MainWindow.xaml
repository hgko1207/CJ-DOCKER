                                <TextBlock Text="{Binding NotUseStatus}" Style="{StaticResource StatusText}"/>
                                <StackPanel>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#4D4D4D"/>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Fill="#4D4D4D" Margin="0 1 0 0"/>
                                </StackPanel>
