                        <TextBlock Text="현황" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 8" FontSize="20"/>
                        <ContentControl Template="{StaticResource HorizontalLine}" Height="1"/>
                        <StackPanel Margin="5 10">
                            <DockPanel>
                                <TextBlock Text="사용중" Style="{StaticResource StatusText}" Width="110" Margin="5 0 0 0"/>
                                <TextBlock Text="{Binding UseStatus}" Style="{StaticResource StatusText}"/>
                                <StackPanel>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}"/>
                                    <Ellipse Style="{StaticResource SmallCircleStyle}" Margin="0 1 0 0"/>
                                </StackPanel>
                            </DockPanel>

