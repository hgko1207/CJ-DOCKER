<dx:ThemedWindow x:Class="CJ_DOCKER.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:local="clr-namespace:CJ_DOCKER"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen" 
        Title="Docker" Height="500" Width="800">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1"/>
            <RowDefinition/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid>
            
        </Grid>

        <ContentControl Grid.Row="1" Template="{StaticResource HorizontalLine}" />

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border x:Name="Docker1" Style="{StaticResource RectangleStyle}"/>
                    <Border Style="{StaticResource RectangleStyle}" Margin="40 0 0 0"/>
                    <Border Style="{StaticResource RectangleStyle}" Margin="40 0 0 0"/>
                    <Border Style="{StaticResource RectangleStyle}" Margin="40 0 0 0"/>
                </StackPanel>
            </Grid>

            <ContentControl Grid.Column="1" Template="{StaticResource VerticalLine}" />

            <Grid Grid.Column="2">
                <TreeView Name="treeView" BorderThickness="0">
                    <TreeViewItem Header="도커" IsExpanded="True" FontSize="14" Margin="5">
                        <TreeViewItem Header="1도커"/>
                        <TreeViewItem Header="2도커" Margin="0 4 0 0"/>
                        <TreeViewItem Header="3도커" Margin="0 4 0 0"/>
                    </TreeViewItem>
                </TreeView>
            </Grid>
        </Grid>

        <ContentControl Grid.Row="3" Template="{StaticResource HorizontalLine}" />

        <DockPanel Grid.Row="4" Margin="5 5">
            <TextBlock Text="{Binding ServerStatus}"/>
            <TextBlock Text="{Binding ConnectStatus}" HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</dx:ThemedWindow>
